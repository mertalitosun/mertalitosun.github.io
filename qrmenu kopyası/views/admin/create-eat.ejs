<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head') %>
<body>
        <%- include('../partials/nav') %>
        <div class="container mt-3">
                <form method="post" enctype="multipart/form-data">
                        <div class="row">
                                <div class="col-md-12 mt-3">
                                        <div class="row mb-3">
                                                <label for="name" class="col-sm-2 col-form-label">Yemek Adı</label>
                                                <div class="col-sm-8">
                                                        <input type="text" class="form-control" id="name" name="name">
                                                </div>
                                        </div>
                                </div>
                        </div>
                        <div class="row">
                                <div class="col-md-12 mt-3">
                                        <div class="row mb-3">
                                                <label for="aciklama" class="col-sm-2 col-form-label">Açıklama</label>
                                                <div class="col-sm-8">
                                                        <input type="text" class="form-control" id="aciklama" name="aciklama">
                                                </div>
                                        </div>
                                </div>
                        </div>
                        <div class="row">
                                <div class="col-md-12 mt-3">
                                        <div class="row mb-3">
                                                <label for="fiyat" class="col-sm-2 col-form-label">Fiyat</label>
                                                <div class="col-sm-8">
                                                        <input type="number" class="form-control" id="fiyat" name="fiyat" min="0">
                                                </div>
                                        </div>
                                </div>
                        </div>
                        <div class="row">
                                <div class="col-md-12 mt-3">
                                        <div class="row mb-3">
                                                <label for="resim" class="col-sm-2 col-form-label">Resim</label>
                                                <div class="col-sm-8">
                                                        <input type="file" class="form-control" id="resim" name="resim">
                                                </div>
                                        </div>
                                </div>
                        </div>
                        <div class="row">
                                <div class="col-md-12 mt-3">
                                        <div class="row mb-3">
                                                <label for="kategori" class="col-sm-2 col-form-label">Kategori</label>
                                                <div class="col-sm-8">
                                                        <select name="kategori" id="kategori" class="form-select">
                                                                <option value="" selected>Seçiniz</option>
                                                                <% category.forEach(category => { %>
                                                                        <option value="<%= category.categoryid %>"><%= category.name %></option>
                                                                <% }) %>
                                                        </select>
                                                </div>
                                        </div>
                                </div>
                        </div>
                        <div class="row mb-3">
                                <div class="col-sm--8 offset-sm-2">
                                        <button type="submit" class="btn btn-warning">Kaydet</button>
                                </div>
                        </div>
                </form>
                
        </div>
</body>
</html>